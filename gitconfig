# This is Git's per-user configuration file.

[user]
    email = myzhang1029@hotmail.com
    signingkey = 7AD94E9F61AF651EE7D699B43F1AB0279EA3843F
    name = Zhang Maiyun

[help]
    autoCorrect = 10

[commit]
    gpgsign = true

[rerere]
    enabled = true
    autoupdate = true

[commit]
    # Show diff when preparing commit message
    verbose = true


[alias]
    a = add
    aa = add --all
    b = branch
    c = commit --verbose
    cl = clone --recurse-submodules
    cln = clean -xdf
    co = checkout
    d = diff
    f = fetch
    gh = git checkout --orphan \"_temporary${RANDOM}_branch\" && git commit -a && git branch -D master && git branch -m master
    l = pull
    lo = log
    lg = log --decorate --oneline --graph
    m = merge
    p = push
    pa = "!git remote | xargs -L1 -I % echo \"git push --all %; git push --tags %\" | sh"
    re = remote
    rv = remote -v
    st = status
    sta = stash
    stp = stash pop
    sm = submodule
    smf = submodule foreach
    sms = submodule sync
    smu = submodule update

[http "https://repo.or.cz"]
    sslCert = ~/.repo.or.cz.push.pem

[pull]
    rebase = false

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

# Include local overrides
[include]
    path = .gitconfig.local

[init]
	defaultBranch = main

[core]
	whitespace = trailing-space,space-before-tab

[apply]
	whitespace = fix

