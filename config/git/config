# This is Git's per-user configuration file.

[user]
    email = me@maiyun.me
    signingkey = 7AD94E9F61AF651EE7D699B43F1AB0279EA3843F
    name = Zhang Maiyun

[core]
    whitespace = trailing-space,space-before-tab
    excludesfile = ~/.gitignore

[help]
    autoCorrect = 10

[rerere]
    enabled = true
    autoupdate = true

[commit]
    gpgsign = true
    # Show diff when preparing commit message
    verbose = true
    cleanup = scissors

[alias]
    a = add
    aa = add --all
    # https://stackoverflow.com/a/39487648/9347959
    anw = "!git -c diff.noprefix=false diff -U0 -w --no-color -- \"$@\" | git apply --cached --ignore-whitespace --unidiff-zero #"
    b = branch
    c = commit --verbose
    cl = clone --recurse-submodules
    cln = clean -xdi
    co = checkout
    cp = cherry-pick
    cpx = cherry-pick -x
    d = diff
    dc = diff --cached
    f = fetch
    gh = "!git checkout --orphan \"_temporary${RANDOM}_branch\" && git commit -a && git branch -D main && git branch -m main"
    l = pull
    lo = log
    lg = log --decorate --oneline --graph
    m = merge
    p = push
    pa = "!git remote | xargs -L1 -I % echo \"git push --all %; git push --tags %\" | sh"
    pf = push --force-with-lease --force-if-includes
    re = remote
    rs = restore
    rss = restore --staged
    rssw = restore --staged --worktree
    rsw = restore --worktree
    rv = remote -v
    st = status
    sta = stash
    stp = stash pop
    sm = submodule
    smf = submodule foreach
    sms = submodule sync
    smu = submodule update
    sw = switch
    swap = "! git stash push -S && git add . && git stash pop"
    swc = switch --create
    t = tag
    tv = tag --verify
    wt = worktree
    wta = worktree add
    wtl = worktree list
    wtr = worktree remove

[fetch]
    parallel = 0
    prune = true
    pruneTags = true

[pull]
    rebase = true

[push]
    autoSetupRemote = true
    followTags = true
    gpgSign = if-asked

[status]
    showStash = true

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[gpg "ssh"]
    allowedSignersFile = ~/.config/git/allowed-signers

[diff "json"]
    textconv = jq --sort-keys .

[init]
    defaultBranch = main

[apply]
    whitespace = fix

[sendemail]
    smtpserver = mail.maiyun.me
    smtpuser = me@maiyun.me
    smtpencryption = tls
    smtpserverport = 587
    annotate = yes

[http]
    lowSpeedLimit = 0

[color]
    ui = auto

[merge]

# Include local overrides
[include]
    path = ~/.config/git/config.local
